.container {
  padding: 20rpx;
}

.history-item {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border: 1px solid #eee;
  border-radius: 10rpx;
  background-color: #fff;
  width: 100%; /* 横向填满 */
}

.history-item-content {
  display: flex;
  flex-direction: row;
  width: 100%; /* 横向填满 */
}

.product-image {
  flex-shrink: 0;
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}

.product-details {
  flex: 1; /* 让商品详情部分自动填充剩余空间 */
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.product-name,
.transaction-price,
.order-status {
  margin-bottom: 10rpx;
  font-size: 28rpx;
  word-wrap: break-word; /* 如果文本过长，自动换行 */
}

.loading,
.no-more-data {
  text-align: center;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

.clear-button {
  width: 100%; /* 横向填满 */
  padding: 20rpx;
  background-color: #ff5722;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  border-radius: 10rpx;
}
