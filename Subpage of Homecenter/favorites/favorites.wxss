.page {
  padding: 20rpx;
}

.favorites-list {
  margin-bottom: 20rpx;
}

.favorite-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
  background-color: #f9f9f9;
}

.favorite-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.product-image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  border: 1px solid #ccc;
}

.product-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  word-wrap: break-word;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.product-price {
  font-size: 28rpx;
  color: #ff4d4d;
}

.remove-button {
  padding: 10rpx 15rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #ff4d4d;
  border: none;
  border-radius: 8rpx;
}

.clear-all-button {
  width: 100%;
  padding: 20rpx 0;
  font-size: 32rpx;
  color: #fff;
  background-color: #007aff;
  border: none;
  border-radius: 10rpx;
  text-align: center;
  margin-top: 20rpx;
}

.loading,
.no-more-data {
  text-align: center;
  font-size: 28rpx;
  color: #888;
  margin-top: 20rpx;
}
