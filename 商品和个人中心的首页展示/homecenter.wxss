/* pages/homecenter/homecenter.wxss */
.main{
  width: 100%;
}

.user-info{
  width: 100%;
  height: 280rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding-left: 32rpx;
  margin-bottom: 20rpx;
  background: #fff;
}

.user-info .avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background: #dcdcdc;
}

.user-info .info{
  flex: 1;
  height: 85rpx;
  padding-left: 30rpx;
}

.user-info .name{
  display: inline-block;
  font-size: 38rpx;
}

.order{
  height: 240rpx;
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
}

.order-header{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 90rpx;
  padding: 0 30rpx;
}

.order-header .right{
  display: flex;
  align-items: center;
}

.order-header .txt{
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.order-header .all{
  font-size: 25rpx;
  color: #666;
  margin-right: 10rpx;
}

.order-header .arrow{
  width: 12rpx;
  height: 24rpx;
}

.order-tab{
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.order-tab .tab{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 120rpx;
}

.tab .icon-image{
  width: 48rpx;
  height: 48rpx;
  position: relative;
}

.tab .icon{
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
}

.tab .txt{
  font-size: 25rpx;
  color: #666;
}
