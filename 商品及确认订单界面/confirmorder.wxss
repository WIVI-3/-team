/* pages/secondhand/confirmorder/confirmorder.wxss */
.order-confirm {
  padding: 20px;
  background-color: #f8f8f8;
}

.goods-info {
  display: flex;
  background-color: #fff;
  padding: 10px;
  margin-bottom: 20px;
}

.goods-image {
  width: 80px;
  height: 80px;
  border-radius: 5px;
  margin-right: 10px;
}

.goods-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.goods-title {
  font-size: 16px;
  color: #333;
  margin-bottom: 5px;
}

.goods-price {
  font-size: 14px;
  color: #FF6666;
}

.buyer-info {
  background-color: #fff;
  padding: 10px;
  margin-bottom: 20px;
}

.info-item {
  display: flex;
  margin-bottom: 10px;
}

.label {
  font-size: 14px;
  color: #666;
  width: 80px;
}

.value {
  font-size: 14px;
  color: #333;
}

.submit-btn {
  text-align: center;
}

.btn {
  width: 100%;
  height: 50px;
  background-color: #FF7A34;
  color: #fff;
  border-radius: 5px;
  line-height: 40px;
  text-align: center;
}
