.container {
  padding: 10px;
}

.category-select {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20px;
}

.category-btn {
  background: linear-gradient(45deg, #ff7eb9, #fff); /* 从粉色到白色的渐变 */
  color: #fff;
  padding: 8px 16px;  /* 调整按钮大小 */
  border-radius: 5px;
  font-size: 12px;  /* 字体大小 */
  text-align: center;
  flex: 1;
  margin: 5px;
  max-width: 120px;  /* 设置按钮的最大宽度 */
  border: none; /* 移除按钮的边框 */
}


.category-btn:hover {
  background-color: #005bb5;
}

.order-card {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-bottom: 20px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 8px;
  background-color: #fff;
  box-sizing: border-box;
}

.product-image {
  width: 100%;
  height: 260px;
  object-fit: cover;
  margin-bottom: 10px;
}

.order-details {
  margin-bottom: 10px;
}

.line-item {
  font-size: 14px;
  color: #333;
}

.actions {
  display: flex;
  gap: 10px;
}

.actions button {
  flex: 1;
  background-color: #007aff;
  color: #fff;
  padding: 10px;
  border-radius: 5px;
  font-size: 14px;
  text-align: center;
}
